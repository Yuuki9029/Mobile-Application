<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.irate" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Irate</name>
    <description>
        The app which allows the user to find, add and edit restaurant ratings.
    </description>
    <author email="trinvmgcd18384@fpt.edu.vn" href="https://www.facebook.com/Tri.nvmt/">
        Nguyen Van Minh Tri
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
